
<div class="forum-banner">
  <h1>FORUM</h1>
  <p> The lawyers of the accesible rights community are here to help!</p>
</div>

<div class= "container forums-container">


  <div class="d-flex justify-content-evenly p-3 icon-text">
    <div>
      <%= link_to forum_path("Resiging") do %>
        <h3>resigning</h3>
        <%= image_tag('blue_resign_icon.png', class: "blue-resign-icon icon-size") %>
      <% end %>
    </div>
    <div>
      <%= link_to forum_path("Unpaid Hours") do %>
        <h3>Unpaid hours</h3>
        <%= image_tag('blue_unpaid_hours_icon.png', class: "blue-resign-icon icon-size") %>
      <% end %>
    </div>
    <div>
      <%= link_to forum_path("Unpaid Bonus") do %>
        <h3>Unpaid Bonus</h3>
        <%= image_tag('blue_unpaid_bonus_icon.png', class: "blue-resign-icon icon-size") %>
      <% end %>
    </div>
    <div>
      <%= link_to forum_path("Termination") do %>
        <h3>Termination</h3>
        <%= image_tag('contract-blue.png', class: "blue-resign-icon icon-size") %>
      <% end %>
    </div>
  </div>

  <div>
      <h2>Add a new question</h2>
      <br>
        <%= simple_form_for [ @forum, @question ] do |f|%>
          <%= f.input :title, placeholder: "Whats your question?"%>
          <%= f.input :content, placeholder: "Add detailed information about your question" %>
          <%= f.submit "Add question", class: "btn btn-outline-primary" %>
        <% end %>
  </div>


  <div class="forum-questions ">
    <h1><%= @forum.name %></h1>
      <% @forum.questions.each do |question| %>
        <div class="card border-secondary shadow p-3 mb-5 bg-body rounded">
        <div id="question-<%= question.id %>">
          <div class="card-body text-secondary">
            <h5 class="card-title"><%=link_to question.title, question_path(question) %></h5>
            <p class="card-text"><%= question.content %></p>
          </div>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
