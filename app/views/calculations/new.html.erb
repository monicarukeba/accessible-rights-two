<div class="container">
  <div class="row">
    <div class="col-6">
      <%= render "form", calculation: @calculation %>
    </div>
    <div class="col-6">
      <% if @calculation.valid? %>
        <%= render "show", calculation: @calculation %>
      <% else %>
        <%= @calculation.errors.full_messages %>
      <% end %>
    </div>
  </div>
</div>
