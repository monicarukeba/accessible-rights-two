<%= simple_form_for calculation do |f| %>
  <div class="row">
    <div class="col"><%= f.input :start_date, label: 'Start Date',  as: :date, html5: true %></div>
    <div class="col"><%= f.input :end_date, label: 'End Date', as: :date, html5: true %></div>
  </div>
  <%= f.input :monthly_salary, label: 'Monthly Salary' %>
  <%= f.input :cause_of_termination, label: 'Cause of Termination', collection: [ "Unjustified dismissal", "Fair dismissal", "Resigned"] %>
  <%= f.input :vacation_days, label: 'Vacation Days' %>
  <%= f.input :christmas_bonus_days, label: 'Christmas Bonus Days' %>
  <p><%= f.submit "Calculate", class: "btn btn-primary rounded-5 yellow-button" %></p>
<% end %>
